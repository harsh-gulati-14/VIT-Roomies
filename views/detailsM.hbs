<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start">
        <h1 class="display-4 fw-bold lh-1 mb-3">Enter your room details</h1>
        <p class="col-lg-10 fs-4">Find Your Roommates and friends' rooms.</p>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">
        <form class="p-4 p-md-5 border rounded-3 bg-light" action="/users/roomdetails" method="POST" id="myform">
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="name" name="roomno" placeholder="Name" required pattern="^[0-9]{1,6}[A-Z]?$">
            <label for="name">Room Number</label>
          </div>
          <div class="form-floating mb-3">
              
              <select name="block" id="bl" form="myform" class="form-select" aria-label="Default select example" required> 
                {{#if male}}
                <option selected value="A">A Block</option>
                <option value="B">B Block</option>
                <option value="B Annex">B Annex</option>
                <option value="C">C Block</option>
                <option value="D">D Block</option>
                <option value="D Annex">D Annex</option>
                <option value="E">E Block</option>
                <option value="F">F Block</option>
                <option value="G">G Block</option>
                <option value="H">H Block</option>
                <option value="K">K Block</option>
                <option value="L">L Block</option>
                <option value="J">J Block</option>
                <option value="Q">Q Block</option>
                
                {{else}}
                <option selected value="AF">A Block</option>
                <option value="BF">B Block</option>
                <option value="CF">C Block</option>
                <option value="DF">D Block</option>
                <option value="EF">E Block</option>
                <option value="E AnnexF">E Annex</option>
                <option value="FF">F Block</option>
                <option value="GF">G Block</option>
                <option value="HF">H Block</option>
                
                {{/if}}
              </select>
              <label for="block">Block</label>
          </div>
          
          <button class="w-100 btn btn-lg btn-primary" id="subBTN" type="submit">Submit</button>
          <hr class="my-4">
         
        </form>
      </div>
    </div>
  </div>
